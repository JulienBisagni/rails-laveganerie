<div class="hero">
  <div class="container">
    <div class="d-flex">
      <h1 class="hero__title">Décrouvrez le chef caché en vous.</h1>
    </div>
    <div class="d-flex">
      <h1 class="hero__title"></h1>
    </div>
  </div>
</div>

<div class="recipes">
  <h2>Recipes List</h2>
  <% @recipes.each do |recipe| %>
    <h3 class="recipe__title">
      <%= link_to recipe.title, "/recipes/#{recipe.id}" %>
    </h3>
    <p class="recipe__description"> <%= recipe.description %> </p>
    <% recipe.recipe_ingredients.each do |rp| %>
      <ul>
        <li><%= rp.ingredient.title %></li> <%= link_to 'destroy', recipe_ingredient_path(rp), method: :delete %>
      </ul>
    <% end %>
  <% end %>
</div>
